{
  "VERSION": "0.1",
  "show": [["w1", "w2", "w3"], ["w4", "w5"]],
  "widgets":
    [
      {
        "name": "w1",
        "type": "Text",
        "font_name": "./examples/fonts/VERDANA.TTF",
        "text": "Simple text",
        "xy": [0, 0]
      },
      {
        "name": "w2",
        "type": "Text",
        "text": "Text with anchor \"rb\" in right bottom corner",
        "font_name": "./examples/fonts/VERDANA.TTF",
        "xy": [1590, 530],
        "anchor": "rb"
      },
      {
        "name": "w3",
        "type": "Text",
        "text": "Text in another font",
        "xy": [400, 400],
        "font_name": "./examples/fonts/VERDANAI.TTF",
        "font_size": 50
      },

      {
      "name": "w4",
        "type": "Picture",
      "path": "./examples/img/bg.png"
      },
      {
        "name": "w5",
        "type": "Statistics",
        "fill": "white",
        "font_name": "./examples/fonts/VERDANA.TTF",
        "xy": [100, 200],
        "text": "Подписчиков: {members_count}\nЗа последние семь дней:\nКомментариев: {comments}\nРепостов: {copies}\nЛайков: {likes}\nПодписчиков: {subscribed}",
        "interval": "week"
      }
    ]
}
